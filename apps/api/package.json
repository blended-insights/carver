{
  "name": "@carver/api",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "bullmq": "5.48.1",
    "chokidar": "^3.6.0",
    "cors": "2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.21.2",
    "ioredis": "^5.3.2",
    "neo4j-driver": "^5.15.0",
    "ts-morph": "^20.0.0"
  },
  "devDependencies": {
    "@types/cors": "2.8.17"
  },
  "nx": {
    "name": "@carver/api",
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/api/dist",
          "format": [
            "cjs"
          ],
          "bundle": true,
          "main": "apps/api/src/main.ts",
          "tsConfig": "apps/api/tsconfig.app.json",
          "assets": [
            "apps/api/src/assets"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "generateLockfile": true,
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "serve": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@carver/api:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@carver/api:build:development"
          },
          "production": {
            "buildTarget": "@carver/api:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "docker-build": {
        "dependsOn": [
          "build"
        ],
        "command": "docker build -f apps/api/Dockerfile . -t carver-api"
      }
    }
  }
}
